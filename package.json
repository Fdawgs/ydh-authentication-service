{
	"name": "ydh-sider-authentication-service",
	"version": "3.2.1",
	"description": "NodeJS Express Service to provide authentication before routing to REST API.",
	"main": "src/app.js",
	"repository": "git+https://github.com/Fdawgs/ydh-sider-authentication-service.git",
	"author": "Frazer Smith <frazer.smith@ydh.nhs.uk>",
	"license": "MIT",
	"scripts": {
		"changelog": "conventional-changelog -p @commitlint/config-conventional -s -i CHANGELOG.md",
		"dupe-check": "yarn jsinspect ./src",
		"lint": "eslint src/**/*.js",
		"nodemon": "cross-env NODE_ENV=development nodemon src/app.js",
		"prettier": "prettier ** --write",
		"start": "node src/app.js",
		"test": "cross-env NODE_ENV=test yarn lint && yarn test-coverage",
		"test-coverage": "cross-env NODE_ENV=test jest --coverage --verbose",
		"test-only": "cross-env NODE_ENV=test jest --verbose"
	},
	"jest": {
		"clearMocks": true,
		"collectCoverage": true,
		"testEnvironment": "node",
		"verbose": true
	},
	"prettier": {
		"arrowParens": "always",
		"bracketSpacing": true,
		"endOfLine": "lf",
		"semi": true,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "none",
		"useTabs": true
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^8.3.4",
		"conventional-changelog-cli": "^2.0.31",
		"coveralls": "^3.0.9",
		"eslint": "^6.8.0",
		"eslint-config-airbnb-base": "^14.0.0",
		"eslint-config-prettier": "^6.10.0",
		"eslint-plugin-import": "^2.20.1",
		"eslint-plugin-jest": "^23.8.1",
		"eslint-plugin-json": "^2.1.0",
		"jest": "^25.1.0",
		"jsinspect": "^0.12.7",
		"node-mocks-http": "^1.8.1",
		"nodemon": "^2.0.2",
		"prettier": "1.19.1",
		"supertest": "^4.0.2",
		"typescript": "^3.8.3"
	},
	"dependencies": {
		"compression": "^1.7.4",
		"cross-env": "^7.0.1",
		"express": "^4.17.1",
		"express-winston": "^4.0.3",
		"fhir-stu3-subscription-resthook": "git+https://github.com/BlackPearSw/fhir-stu3-subscription-resthook.git",
		"helmet": "^3.21.3",
		"passport": "^0.4.1",
		"passport-http-bearer": "^1.0.1",
		"query-string": "^6.11.0",
		"request": "^2.88.2",
		"sanitize-middleware": "^1.0.0",
		"winston": "^3.2.1",
		"winston-daily-rotate-file": "^4.4.2"
	}
}
