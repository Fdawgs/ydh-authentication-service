{
	"name": "ydh-sider-authentication-service",
	"version": "2.2.7",
	"description": "NodeJS Express Service to provide authentication before routing to REST API.",
	"main": "src/app.js",
	"repository": "git+https://github.com/Fdawgs/ydh-sider-authentication-service.git",
	"author": "Frazer Smith <frazer.smith@ydh.nhs.uk>",
	"license": "MIT",
	"scripts": {
		"changelog": "conventional-changelog -p @commitlint/config-conventional -s -i CHANGELOG.md",
		"dupe-check": "yarn jsinspect ./src",
		"lint": "eslint src/**/*.js",
		"nodemon": "nodemon src/app.js",
		"prettier": "prettier src/**/*.js --write",
		"start": "node src/app.js",
		"test": "yarn lint && yarn test-coverage",
		"test-coverage": "jest --coverage --verbose",
		"test-only": "jest --verbose",
		"install-windows-service": "winser -i -s -a -n \"SIDeR Authentication Service\"",
		"uninstall-windows-service": "winser -r -x -s -n \"SIDeR Authentication Service\""
	},
	"jest": {
		"clearMocks": true,
		"collectCoverage": true,
		"testEnvironment": "node",
		"verbose": true
	},
	"prettier": {
		"arrowParens": "always",
		"bracketSpacing": true,
		"endOfLine": "lf",
		"semi": true,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "none",
		"useTabs": true
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^8.3.4",
		"conventional-changelog-cli": "^2.0.31",
		"coveralls": "^3.0.9",
		"eslint": "^6.8.0",
		"eslint-config-airbnb-base": "^14.0.0",
		"eslint-config-prettier": "^6.9.0",
		"eslint-plugin-import": "^2.20.0",
		"eslint-plugin-jest": "^23.6.0",
		"eslint-plugin-json": "^2.0.1",
		"jest": "^24.9.0",
		"jsinspect": "^0.12.7",
		"nodemon": "^2.0.2",
		"prettier": "1.19.1",
		"supertest": "^4.0.2",
		"typescript": "^3.7.5"
	},
	"dependencies": {
		"compression": "^1.7.4",
		"express": "^4.17.1",
		"express-bearer-token": "^2.4.0",
		"express-winston": "^4.0.2",
		"fhir-stu3-subscription-resthook": "git+https://github.com/BlackPearSw/fhir-stu3-subscription-resthook.git",
		"helmet": "^3.21.2",
		"request": "^2.88.0",
		"winser": "^1.0.3",
		"winston": "^3.2.1",
		"winston-daily-rotate-file": "^4.4.2"
	}
}